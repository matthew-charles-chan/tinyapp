<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <a class="nav-item nav-link" href="/urls">My URLs</a>
      <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
    </div>
    <% if(!username) {%>
      <form style="justify-content: right;" class="form-inline" method="POST" action="/login">
        <input class="form-control-lg mb-0 mt-0" type="text" name="username" placeholder="username" style="width: 300px; margin:1em">
        <button type="submit" class="btn btn-outline-light btn-lg">login</button>
      </form>
    <% } else { %>
      <form style="justify-content: right;" class="form-inline" method="POST" action="/logout">
        <h5 class="mr-3 mb-0 text-light">Logged in as: <%= username%></h5>
        <button type="submit" class="btn btn-outline-light btn-lg">logout</button>
      </form>
    <% } %>
  </nav>
</header>